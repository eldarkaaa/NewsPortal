@{
}
@model LABWEB.Models.Entities.Categories;

<h1>Edit News</h1>

@if (Model is null)
{
    <p>No news was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">HeadLine</label>
            <input type="text" class="form-control" asp-for="Category" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Categories">Delete</button>
        </div>
    </form>
}