@model LABWEB.Models.Entities.Comments
<h2>Add your comments</h2>
<h1>Add News</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Text</label>
        <input type="text" class="form-control" required asp-for="Text" />
    </div>

    <div class="mt-3">
        <label class="form-label">Author</label>
        <input type="text" class="form-control" required asp-for="Author" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>