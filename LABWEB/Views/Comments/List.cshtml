@{
}
@model List<LABWEB.Models.Entities.Comments>

<h1>Comments</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Text</th>
            <th>Author</th>
            <th>NewsId</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comments in Model)
        {
            {
        <tr>
            <td>@comments.Id</td>
            <td>@comments.Text</td>
            <td>@comments.Author</td>
            <td>@comments.NewsId</td>
        </tr>
            }
        }
    </tbody>
</table>
