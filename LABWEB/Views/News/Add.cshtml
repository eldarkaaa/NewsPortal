@model LABWEB.Models.AddNewsViewModel

<h1>Add News</h1>
<form method="post"> 
    <div class="mt-3">
        <label class="form-label">HeadLine</label>
        <input type="text" class="form-control" asp-for="HeadLine" />
    </div>

    <div class="mt-3">
        <label class="form-label">Text</label>
        <input type="text" class="form-control" asp-for="Text" />
    </div>

    <div class="mt-3">
        <label class="form-label">Date</label>
        <input type="date" class="form-control" asp-for="Date" />
    </div>
    <div class="mt-3">
        <label class="form-label">Author</label>
        <input type="text" class="form-control" asp-for="Author" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

