@model LABWEB.Models.AddNewsViewModel

<h1>Add News</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">HeadLine (3-30 symbols, letters only)</label>
        <input type="text" class="form-control" required pattern="[A-Za-zА-Яа-яЁё]{3,30}" asp-for="HeadLine" />
    </div>

    <div class="mt-3">
        <label class="form-label">Text</label>
        <input type="text" class="form-control" required asp-for="Text" />
    </div>

    <div class="mt-3">
        <label class="form-label">Date</label>
        <input type="date" class="form-control" required asp-for="Date" />
    </div>
    <div class="mt-3">
        <label class="form-label">Author (3-30 symbols, letters only)</label>
        <input type="text" class="form-control" pattern="[A-Za-zА-Яа-яЁё]{3,30}" required asp-for="Author" />
    </div>

    <div class="mt-3">
        <label class="form-label">Categories ID </label>
        <select asp-for="CategoriesId" class="form-control" asp-items="@ViewBag.Categories"></select>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

