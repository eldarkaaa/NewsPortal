@{
}
<h1>News</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>HeadLine</th>
            <th>Text</th>
            <th>Date</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.HeadLine</td>
            <td>@Model.Text</td>
            <td>@Model.Date</td>
            <td>@Model.Author</td>
            <td>
                <a class="btn btn-primary" asp-controller="News" asp-action="Edit">Edit</a>
            </td>
        </tr>
    </tbody>
</table>