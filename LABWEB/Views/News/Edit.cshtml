@{
}
@model LABWEB.Models.Entities.News;

<h1>Edit News</h1>

@if (Model is null)
{
    <p>No news was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">HeadLine</label>
            <input type="text" class="form-control" asp-for="HeadLine" />
        </div>

        <div class="mt-3">
            <label class="form-label">Text</label>
            <input type="text" class="form-control" asp-for="Text" />
        </div>

        <div class="mt-3">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" asp-for="Date" />
        </div>
        <div class="mt-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-control" asp-for="Author" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="News">Delete</button>
        </div>
    </form>
}